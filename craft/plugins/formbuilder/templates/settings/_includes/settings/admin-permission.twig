{% set container = {
    title: 'Allow Non-Admins' |t,
    info: 'Allow non-admins to add/update forms.' |t,
    icon: null,
    toggle: true,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'checkbox',
        name: name,
        value: '1',
        checked: enabled,
        class: 'hidden',
        id: null
    }
} %}

